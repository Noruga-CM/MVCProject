
@{
    ViewData["Title"] = "Edição de Contato";
}
<div class="text-center">
  <h1 class="display-4">Editar Contato</h1>
  <br>
  <form>
    <div class="mb-3">
      <label for="name" class="form-label">Nome</label>
      <input type="text" class="form-control" placeholder="Digite o nome do contato">
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Endereço de e-mail</label>
      <input type="email" class="form-control" placeholder="Digite o endereço de e-mail do contato">
    </div>
    <div class="mb-3">
      <label for="phoneNumber" class="form-label">Celular</label>
      <input type="phone" class="form-control" placeholder="Digite o número de celular do contato">
    </div>
    <div class=" d-grid gap-2">
      <a type="submit" class="btn btn-primary">Alterar</a>
      <a class="btn btn-secondary" asp-controller="Contacts" asp-action="Index" role="button">Voltar</a>
    </div>
  </form>
</div>

